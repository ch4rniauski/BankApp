{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings":{
    "SecurityKey": "p3cALC4gNsoWc91c5Lcg42Fcz9jg1mzd"
  },
  "ReverseProxy": {
    "Routes": {
      "authentication-register-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients/register",
          "Methods": [ "POST" ]
        }
      },
      "authentication-delete-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/{id:guid}",
          "Methods": [ "DELETE" ]
        }
      },
      "authentication-update-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/{id:guid}",
          "Methods": [ "PUT" ]
        }
      },
      "authentication-login-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients/login",
          "Methods": [ "POST" ]
        }
      },
      "authentication-isAuth-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/is-auth",
          "Methods": [ "GET" ]
        }
      },
      "authentication-accessToken-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients/access-token",
          "Methods": [ "POST" ]
        }
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authentication-api:8080"
          }
        }
      }
    }
  }
}
