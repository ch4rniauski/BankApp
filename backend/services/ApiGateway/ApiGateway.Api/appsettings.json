{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings":{
    "SecurityKey": "p3cALC4gNsoWc91c5Lcg42Fcz9jg1mzd"
  },
  "ReverseProxy": {
    "Routes": {
      "authentication-register-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients",
          "Methods": [ "POST" ]
        }
      },
      "authentication-delete-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/{id:guid}",
          "Methods": [ "DELETE" ]
        }
      },
      "authentication-update-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/{id:guid}",
          "Methods": [ "PUT" ]
        }
      },
      "authentication-login-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients/login",
          "Methods": [ "POST" ]
        }
      },
      "authentication-is-auth-route": {
        "ClusterId": "authentication-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/clients/is-auth",
          "Methods": [ "GET" ]
        }
      },
      "authentication-access-token-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/clients/access-token",
          "Methods": [ "POST" ]
        }
      },
      "credit-cards-create-route": {
        "ClusterId": "credit-cards-cluster",
        "Match": {
          "Path": "/api/creditcards",
          "Methods": [ "POST" ]
        }
      },
      "credit-cards-by-client-id-route": {
        "ClusterId": "credit-cards-cluster",
        "Match": {
          "Path": "/api/creditcards/clients/{clientId:guid}",
          "Methods": [ "GET" ]
        }
      },
      "credit-cards-by-id-route": {
        "ClusterId": "credit-cards-cluster",
        "Match": {
          "Path": "/api/creditcards/{cardId:guid}",
          "Methods": [ "GET" ]
        }
      },
      "money-transfers-transfer-route": {
        "ClusterId": "money-transfer-cluster",
        "Match": {
          "Path": "/api/moneytransfers",
          "Methods": [ "POST" ]
        }
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authentication-api:8080"
          }
        }
      },
      "credit-cards-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://credit-cards-api:8080"
          }
        }
      },
      "money-transfer-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://money-transfer-api:8080"
          }
        }
      }
    }
  }
}
